/* pages/toptab/toptab.wxss */
.bj{
  width:100%;
  height:300rpx;
}
.top-tab {
  width: 750rpx;
  height: 100rpx;
  background: #298de5;
  color: #8ccefd;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 9999;
}

.flex-item {
  flex-grow: 1;
  text-align: center;
}

.flex-wrp {
  display: flex;
}

.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}

.active {
  color: #fff;
  border-bottom: solid 2px #fff;
}
.pro-item{
  margin-left: 30rpx;
}
.pro-logo{
  width:200rpx;
  height:200rpx;
}
.pro-desc{
  margin-bottom:30rpx;
}

